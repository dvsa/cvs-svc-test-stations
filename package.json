{
  "name": "cvs-svc-test-station",
  "version": "1.0.0",
  "description": "Test Station service that stores and serves the Test Stations data",
  "main": "handler.js",
  "engines": {
    "node": "18.*",
    "npm": "9.*"
  },
  "scripts": {
    "start": "BRANCH=local SLS_DEBUG=* serverless offline start --noPrependStageInUrl",
    "build": "tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" \\)  | cpio -pdm .build",
    "test": "npm run test:unit -- --coverage",
    "test:unit": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.unitTest.ts\" --runInBand --detectOpenHandles",
    "test:integration": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\"",
    "test-i": "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE=1 npm run test:integration -- --runInBand --globalSetup='./scripts/setup.ts' --globalTeardown='./scripts/teardown.ts'",
    "prepush": "npm run test && npm run build && npm run test-i",
    "security-checks": "git secrets --scan",
    "lint": "tslint tests/**/*.ts src/**/*.ts",
    "format": "prettier --write .",
    "sonar-scanner": "sonar-scanner",
    "audit": "npm audit --prod",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME}/ && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip .",
    "tools-setup": "sls dynamodb install && husky install",
    "commit-msg": "commitlint --edit $1",
    "pre-commit": "npm run security-checks && npm run audit && npm run lint && npm run format",
    "predeploy": "npm install && npm run prepush"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.621.0",
    "@aws-sdk/lib-dynamodb": "^3.549.0",
    "@smithy/smithy-client": "^2.5.0",
    "aws-lambda": "^1.0.7",
    "aws-xray-sdk": "^3.6.0",
    "joi": "17.6.0",
    "node-yaml": "4.0.1",
    "path-parser": "4.2.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@aws-sdk/client-eventbridge": "^3.549.0",
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "12.1.4",
    "@types/jest": "29.5.4",
    "@types/jest-plugin-context": "2.9.4",
    "@types/lambda-tester": "3.6.1",
    "@types/node": "13.13.5",
    "@types/request": "2.48.4",
    "@types/sinon": "7.5.2",
    "audit-filter": "0.5.0",
    "aws-sdk-client-mock": "^4.0.0",
    "commitlint-plugin-function-rules": "1.6.0",
    "expect": "27.4.6",
    "husky": "7.0.4",
    "jest": "^29.7.0",
    "jest-plugin-context": "2.9.0",
    "jest-sonar-reporter": "2.0.0",
    "lambda-tester": "4.0.1",
    "prettier": "2.3.2",
    "serverless": "3.34.0",
    "serverless-dynamodb": "^0.2.43",
    "serverless-offline": "^12.0.4",
    "serverless-offline-aws-eventbridge": "^2.1.0",
    "serverless-plugin-tracing": "2.0.0",
    "serverless-plugin-typescript": "2.1.5",
    "sinon": "7.5.0",
    "standard": "16.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "8.10.1",
    "tslint": "6.1.3",
    "tslint-jsdoc-rules": "0.2.0",
    "tslint-no-unused-expression-chai": "0.1.4",
    "typescript": "^4.0.0"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
